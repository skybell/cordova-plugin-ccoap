<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-ccoap" version="0.4.0" 
    xmlns="http://apache.org/cordova/ns/plugins/1.0" 
    xmlns:android="http://schemas.android.com/apk/res/android">
    <name>CCoap</name>
    <js-module name="CCoap" src="www/CCoap.js">
        <clobbers target="CCoap" />
    </js-module>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="CCoap">
                <param name="android-package" value="cordova.plugin.ccoap.CCoap" />
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml">
            <uses-permission android:name="android.permission.INTERNET" />
        </config-file>
        <source-file src="src/android/CCoap.java" target-dir="src/cordova/plugin/ccoap/CCoap" />
        <source-file src="src/android/CCoapClient.java" target-dir="src/cordova/plugin/ccoap/CCoap" />
        <source-file src="src/android/CCoapDiscovery.java" target-dir="src/cordova/plugin/ccoap/CCoap" />
        <source-file src="src/android/CCoapError.java" target-dir="src/cordova/plugin/ccoap/CCoap" />
        <source-file src="src/android/CCoapException.java" target-dir="src/cordova/plugin/ccoap/CCoap" />
        <source-file src="src/android/CCoapUtils.java" target-dir="src/cordova/plugin/ccoap/CCoap" />
        <source-file src="src/android/org/ws4d" target-dir="app/src/main/java/org"/>
    </platform>
    <platform name="ios">
        <config-file target="config.xml" parent="/*" >
            <feature name="CCoap">
                <param name="ios-package" value="CCoap"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <header-file src="src/ios/CCoap.h" />
        <source-file src="src/ios/CCoap.m" />
        <header-file src="src/ios/CCoapRequest.h" />
        <source-file src="src/ios/CCoapRequest.m" />
        <header-file src="src/ios/CCoapUtils.h" />
        <source-file src="src/ios/CCoapUtils.m" />
        <header-file src="src/ios/iCoAP/GCDAsyncUdpSocket.h" />
        <source-file src="src/ios/iCoAP/GCDAsyncUdpSocket.m" />
        <header-file src="src/ios/iCoAP/ICoAPExchange.h" />
        <source-file src="src/ios/iCoAP/ICoAPExchange.m" />
        <header-file src="src/ios/iCoAP/ICoAPMessage.h" />
        <source-file src="src/ios/iCoAP/ICoAPMessage.m" />
        <header-file src="src/ios/iCoAP/NSString+hex.h" />
        <source-file src="src/ios/iCoAP/NSString+hex.m" />
    </platform>
</plugin>